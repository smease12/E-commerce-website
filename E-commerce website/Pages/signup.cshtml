@page
@model E_commerce_website.Pages.signupModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Smease12 Gifts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <img src="logo.png" class="logo" alt="">
        <form method ="post" style="margin: 0 auto; width: 300px;">
            @*added style 4/29/23*@
            <span asp-validation-for="User.Name" class="text-danger"></span>
            <input type="text" asp-for="User.Name" autocomplete="off" id="Name" name="User.Name" placeholder="name">

            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" autocomplete="off" asp-for="Email" id="Email" data-val-remote-additionalfields="__RequestVerificationToken" name="Email" placeholder="email">

            <span asp-validation-for="User.Password" class="text-danger"></span>
            <input type="password" asp-for="User.Password" autocomplete="off" id="Password" name="User.Password" placeholder="password">

            <span asp-validation-for="User.Number" class="text-danger"></span>
            <input type="text" asp-for="User.Number" autocomplete="off" id="Number" name="User.Number" placeholder="number">          
            
            <input type="checkbox" checked class="checkbox" name="User.TermsAndCond" id="TermsAndCond" value="true">
            <input type="hidden" name="User.TermsAndCond" value="false" />
            <label for="User.TermsAndCond">agree to our <a href="">terms and conditions</a></label>
            <span asp-validation-for="User.TermsAndCond" class="text-danger"></span>
            
            <br>
            <input type="checkbox" class="checkbox" id="Notification" name="User.Notification">
            <label for="User.Notification"><a href="">recieve upcoming offers and events mails</a></label>
            <button class="submit-btn">create account</button>
        </form>
        <a href="/login" class="link">already have an account? Log in here</a>
    </div>

    <div class="alert-box">
        <img src="error.png" class="alert-img" alt="">
        <p class="alert-msg">Error message</p>
    </div>
</body>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>

</html>

