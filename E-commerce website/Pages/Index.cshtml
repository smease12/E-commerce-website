@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="hero-section">
    <div class="content">
        <img src="logo.png" class="logo" alt="">
        <p class="sub-heading">handmade candles, jewelry, and furniture</p>
    </div>
</header>

<section class="product">
    <h2 class="product-category">best selling</h2>

    <button class="pre-btn"><img src="arrow.png" alt=""></button>
    <button class="nxt-btn"><img src="arrow.png" alt=""></button>

    <div class="product-container">
        @for(int i=0; i<Model.FeaturedProducts.Count; i++)
        {
            <div class="product-card">
                <div class="product-image">
                    <span class="discount-tag">@Model.FeaturedProducts[i].discount% off</span>
                    <a asp-page="/Product" asp-route-productId=@Model.FeaturedProducts[i].id>
                        <img class="product-thumb" src="~/uploads/@Model.FeaturedProducts[i].imgLocation1" />
                    </a>
                    <button class="card-btn">add to wishlist</button>
                </div>
                <div class="product-info">
                    <a class="product-brand" asp-page="/Product" asp-route-productId=@Model.FeaturedProducts[i].id>
                        <h2 class="product-brand">@Model.FeaturedProducts[i].name</h2>
                    </a>
                    <p class="product-short-des">@Model.FeaturedProducts[i].descriptionShort</p>
                    <span class="price">$@Model.FeaturedProducts[i].sellPrice</span>
                    <span class="actual-price">$@Model.FeaturedProducts[i].fullPrice</span>
                </div>
            </div>
        }
    </div>

</section>
<section class="collection-container">
    <a asp-page="search" asp-route-keyword="candle" class="collection">
        <img src="candles.jpg" alt="">
        <p class="collection-title">candles</p>
    </a>
    <a asp-page="search" asp-route-keyword="jewelry" class="collection">
        <img src="earrings grid.jpg" alt="">
        <p class="collection-title">Jewelry</p>
    </a>
    <a asp-page="search" asp-route-keyword="furniture" class="collection">
        <img src="furniture grid.jpg" alt="">
        <p class="collection-title">furniture</p>
    </a>
</section>


