@page 
@model E_commerce_website.Pages.CartModel


@section Styles {
    <link href="@Url.Content("~/css/product.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css"/>*@
}
        @{
           
<section class="product-details">
    <div class="details" style="width: 100%">
        <h2 class="product-brand">Shopping Cart</h2>
        <a href="#">Deselect all items</a>

        <p class="product-sub-heading">Products</p>

        <form method="post" class="row text-center align-items-center ">
        <input type="hidden" asp-for="Count"/>
        <input type="hidden" asp-for="TotalPrice"/>
            <div class="col-9" >
                @for(int i=0; i< Model.Products.Count; i++){
                        <input type="hidden" asp-for="@Model.Products[i].id" />
                        <input type="hidden" asp-for="@Model.Products[i].name" />
                        <input type="hidden" asp-for="@Model.Products[i].imgLocation1" />
                        <input type="hidden" asp-for="@Model.Products[i].imgLocation2" />
                        <input type="hidden" asp-for="@Model.Products[i].imgLocation3" />
                        <input type="hidden" asp-for="@Model.Products[i].imgLocation4" />
                        <input type="hidden" asp-for="@Model.Products[i].fullPrice" />
                        <input type="hidden" asp-for="@Model.Products[i].descriptionLong" />
                        <input type="hidden" asp-for="@Model.Products[i].descriptionShort" />
                        <input type="hidden" asp-for="@Model.Products[i].stock" />
                        <input type="hidden" asp-for="@Model.Products[i].tags" />
                 <div class="row border border-dark align-items-center">
                    <div class="col-1 m-3">
                        <input type="checkbox" class="checkbox" id="selected">
                    </div>
                    <div class="col-2 m-3" > 
                                <img style="height:100px; width:100px" src="~/uploads/@@Model.Products[i].imgLocation1" />
                    </div>
                            <div class="col-4 m-3"> @Model.Products[i].name </div>
                            <div class="col-3 m-3">@Model.Products[i].sellPrice</div>
                </div>
                }
                
            </div>
            <div class="col-3">
            @if(Model.Count > 1){
                        <p>Subtotal (@Model.Count items): $@Model.TotalPrice</p>
                    }
                    else
                    {
                        <p>Subtotal (@Model.Count item): $@Model.TotalPrice</p>
                    }
                    <p><button type="submit" class="buttons">Proceed to Checkout</button></p>
            </div>
            
        </form>
        
    </div>
</section>

<section class="detail-des">
    @if(Model.Count > 1)
    {
            <h2 class="heading">Subtotal (@Model.Count items): $@Model.TotalPrice</h2>
    }
    else
    {
            <h2 class="heading">Subtotal (@Model.Count item): $@Model.TotalPrice</h2>
    }
</section>
}
@section Scripts
    {
    <script src="~/js/product.js"></script>
}


