@page "{UserId=1}"
@model E_commerce_website.Pages.CartModel


@section Styles {
    <link href="@Url.Content("~/css/product.css")" rel="stylesheet" type="text/css" />
}

<section class="product-details">
    <div class="details" style="width: 100%">
        <h2 class="product-brand">Shopping Cart</h2>
        <a href="#">Deselect all items</a>

        <p class="product-sub-heading">Products</p>
        @*style="border-left:solid; border-top:solid;s
        border-bottom:solid;"*@
        <div class="row">

            <div class="col-lg-1" >
                <span class="border-top border-bottom border-start border-end-0">
                    checkbox
                </span>
                </div>
            <div class="col-lg-2" >
                product image
            </div>
            <div class="col-lg-4" >
                product name and details</div>
            <div class="col-lg-2" >price</div>
 
            <div class="col-lg-3">
                <p>Subtotal (1 item): $50.00</p>
                <p><button class="buttons">Proceed to Checkout</button></p>
                </div>
        </div>
    </div>
</section>

<section class="detail-des">
    <h2 class="heading">Subtotal (1 item): $50.00</h2>
    @*<p class="des">Subtotal (1 item): $50.00</p>*@
</section>

@section Scripts
    {
    <script src="~/js/product.js"></script>
}


